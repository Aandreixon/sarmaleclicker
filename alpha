    document.getElementById('buton4').style="display: none;";
    document.getElementById('multi').style="display: none;";
    document.getElementById('multi2').style="display: none;";
    document.getElementById('multi3').style="display: none;";
    document.getElementById('casa1').style="width:150px;height:180px;"
    document.getElementById('casa1').src="https://cdn.discordapp.com/attachments/458296193219428366/458296219341684756/dm.png";
    document.getElementById('win').innerHTML="CONGRATULATIONS!"+'<br>'+" YOU WIN!";
		money();
    }
}
function loop() {
	x=x+1;
    money();
	setTimeout(lop, 500/a);
}
function lop() {
	setTimeout(loop, 500/a);
}
function multi() {
	document.getElementById('multi').innerHTML = "Money per click: $" + (y);
}
function multia() {
	document.getElementById('multi2').innerHTML = "Money per second: $" + (a);
}
function multib() {
	document.getElementById('multi3').innerHTML = "Critical chance: " + (crit) + "%";
}
function critical() {
	var rand=Math.floor(Math.random() * 100) + 1;
    if (rand<=crit) {
    	x=x+y*9;
    }
    money();
}
function money() {
	document.getElementById('ban').innerHTML = 'Money: $'+(x);
}
