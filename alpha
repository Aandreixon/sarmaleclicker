<script>
multi();
multia();
multib();
function upgrade1() {
	if (x>=cost1) {
    	x=x-cost1;
    	cost1=cost1+sc;
        scc=scc+1;
        if (scc>=4) {
        	scc=0;
       		sc=sc+1;
        }
    	y=y+1;
        critial();
    }
	money();
    multi();
    document.getElementById('buton1').innerHTML = "Upgrade1 (money per click) (cost: $"+(cost1)+")";
}
function upgrade2() {
	if (x>=cost2) {
        x=x-cost2;
        cost2=cost2+sc2;
        scc2=scc2+1;
        if (scc2>=4) {
        	scc2=0;
            sc2=sc2+1;
        }
        document.getElementById('buton2').innerHTML = "Upgrade2 (money per second) (cost: $"+(cost2)+")";
        a=a+1;
        if (conditie==0) {
        conditie=1;
        loop();
        }
    }
	money();
    multia();
}
function upgrade3() {
	if (crit<=99) {
		if (x>=cost3) {
    		x=x-cost3;
        	cost3=cost3+sc3;
        	scc3=scc3+1;
        	if (scc3>=4) {
        		scc3=0;
            	sc3=sc3+1;
        	}
        	document.getElementById('buton3').innerHTML = "Upgrade3 (critical chance) (cost: $"+(cost3)+")";
        	crit=crit+1;
    	}
    	money();
    	multib();
	}
}
function casa1() {
	if (x>=cost4) {
    x=x-cost4
		document.getElementById('ver').style="display: none;";
